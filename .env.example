# MangaGen Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# REQUIRED
# ============================================

# Google Gemini API Key (for story generation)
# Get yours at: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# ============================================
# OPTIONAL
# ============================================

# HuggingFace Token (for downloading gated models)
# Get yours at: https://huggingface.co/settings/tokens
HF_TOKEN=your_huggingface_token_here

# Kaggle credentials (for Kaggle CLI usage)
# Get yours at: https://www.kaggle.com/settings → API → Create New Token
KAGGLE_USERNAME=your_kaggle_username
KAGGLE_KEY=your_kaggle_api_key

# ============================================
# ADVANCED (usually not needed)
# ============================================

# Default visual style: bw_manga or color_anime
MANGAGEN_DEFAULT_STYLE=bw_manga

# Default panel layout: 2x2, vertical_webtoon, 3_panel, single
MANGAGEN_DEFAULT_LAYOUT=2x2

# Gemini model to use (default: gemini-2.0-flash)
GEMINI_MODEL=gemini-2.0-flash

# SDXL inference steps (higher = better quality, slower)
SDXL_INFERENCE_STEPS=30

# SDXL guidance scale (6-9 recommended)
SDXL_GUIDANCE_SCALE=7.5

# IP-Adapter strength for character consistency (0.0-1.0)
IP_ADAPTER_SCALE=0.6
