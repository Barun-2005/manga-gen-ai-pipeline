# ============================================
# MangaGen Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# The backend auto-loads these on startup!

# ============================================
# LLM PROVIDERS (Pick at least one)
# ============================================

# Groq - RECOMMENDED (FREE, fast, generous limits)
# Get key: https://console.groq.com/keys
GROQ_API_KEY=your_groq_key_here

# NVIDIA NIM - 40 req/min unlimited (FREE)
# Get key: https://build.nvidia.com/
NVIDIA_API_KEY=your_nvidia_key_here

# Google Gemini (If you have a PAID key - free tier is dead)
# Get key: https://aistudio.google.com/apikey
GEMINI_API_KEY=your_gemini_key_here

# OpenRouter - Access 100+ models (Pay per use)
# Get key: https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_key_here

# ============================================
# IMAGE GENERATION
# ============================================

# Pollinations.ai - FREE, no key needed! (Default)
# NVIDIA NIM can also do image gen (uses same key)

# ============================================
# DATABASE (Future - for user accounts)
# ============================================

# MongoDB Atlas connection string
# MONGODB_URI=mongodb+srv://user:pass@cluster.mongodb.net/mangagen

# ============================================
# APP SETTINGS
# ============================================

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Backend port
PORT=8000

# Debug mode
DEBUG=true

# Default visual style: bw_manga or color_anime
MANGAGEN_DEFAULT_STYLE=bw_manga

# Default panel layout: 2x2, 2x3, 3x3
MANGAGEN_DEFAULT_LAYOUT=2x2
