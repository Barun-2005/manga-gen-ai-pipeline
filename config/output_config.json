{
  "max_saved_runs": 10,
  "panel_naming_style": "descriptive",
  "keep_logs": true,
  "auto_cleanup": true,
  "default_base_prompts": "assets/prompts/base_prompts.txt",
  "default_enhanced_prompts": "assets/prompts/enhanced_prompts.txt",
  "comfyui_url": "http://127.0.0.1:8188",
  "color_mode": "color",
  "story_memory": {
    "enabled": true,
    "memory_dir": "outputs/story_memory",
    "auto_save_scenes": true,
    "track_character_arcs": true
  },
  "color_settings": {
    "color": {
      "style_prompt": "vibrant colors, full color manga style, detailed shading",
      "negative_prompt": "monochrome, black and white, grayscale",
      "workflow_template": "assets/workflows/color_manga_workflow.json"
    },
    "black_and_white": {
      "style_prompt": "black and white manga style, high contrast, detailed lineart, screentones",
      "negative_prompt": "color, colorful, vibrant colors",
      "workflow_template": "assets/workflows/bw_manga_workflow.json"
    }
  },
  "output_settings": {
    "create_thumbnails": false,
    "save_metadata": true,
    "compress_old_runs": false,
    "include_color_mode_in_filename": true
  },
  "dialogue_settings": {
    "enabled": true,
    "auto_place_bubbles": true,
    "bubble_style": "manga",
    "min_bubble_size": [80, 40],
    "max_bubble_size": [300, 150],
    "overlap_threshold": 0.3,
    "placement_quality_threshold": 0.7
  },
  "validation_settings": {
    "run_emotion_extraction": true,
    "run_coherence_analysis": true,
    "save_detailed_reports": true,
    "adapt_validation_for_color_mode": true,
    "validate_dialogue_placement": true
  }
}
